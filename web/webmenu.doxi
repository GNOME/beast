@dnl# === NEWS macros ===
@doxer_command newstag		@dnl { NEWS-TITLE }
@doxer_anchor{@doxer_args{1}}
@doxer_span{newstitle,@doxer_bold{@doxer_args{1}}}@*@*
@done
@doxer_command newsentry	@dnl { NEWS-DATE , NEWS-DEPARTEMENT }
@doxer_anchor{@doxer_args{1}}
@doxer_span{newstitle,@doxer_bold{@doxer_args{1}}}@*
@doxer_span{newsdptmt,@doxer_bold{@doxer_args{2:}}}@*@*
@done

@dnl# === Website Logo ===
@heading{group=header,span=nomargin}
@rawhtml{
<table id="header-image" width="100%" border="0" cellspacing="0" cellpadding="0" rules="none"
       style="background-image: url(@top_styledir/beast-bg.png); height: 130px;
	      background-position: top right; background-repeat: repeat-x; margin-top: 3px;">
  <tr>
    <td width="50%" align="left" ><img src="@top_styledir/beast-left.png" alt="&lt;&lt;&lt; BEAST &lt;&lt;&lt;"/></td>
    <td width="50%" align="right"><img src="@top_styledir/beast-right.png" alt="&gt;&gt;&gt; Bedevilled Audio System &gt;&gt;&gt;"/></td>
  </tr>
</table>
}

@dnl# === Website Menu ===
@heading{group=left,body-span=webmenu}
@doxer_fontsize{+1,@*}

@defalias{menu_branch}	@doxer_visible{@doxer_cmatch{\b@doxer_args{1}\b,@doxer_get{webmenu}}}

@doxer_command	fmenuuri	@dnl flat uris {FILE_URI, TITLE}
@doxer_span{menu-leaf,@uri{@doxer_args{1},@doxer_args{2:}}}
@done

@doxer_command	dmenuuri	@dnl conditionalized uris {FILE_URI, TITLE}
@doxer_visible{@doxer_cmatch{.*@doxer_get{destination-basename},@doxer_args{1}}}
@doxer_span{menu-expand,@uri{@doxer_args{1},@doxer_args{2:}}}
@done
@doxer_hidden{@doxer_cmatch{.*@doxer_get{destination-basename},@doxer_args{1}}}
@doxer_span{menu-collapse,@uri{@doxer_args{1},@doxer_args{2:}}}
@done
@done

