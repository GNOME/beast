METHOD (BseScriptControl, get-action) {
  HELP	= "Retrive an action of this script control.";
  IN	= bse_param_spec_object ("script_control", "Script Control", NULL,
				 BSE_TYPE_SCRIPT_CONTROL, SFI_PARAM_DEFAULT);
  IN	= sfi_param_spec_int ("nth_action", "Nth Action", NULL,
			      0, 0, G_MAXINT, 1, SFI_PARAM_DEFAULT);
  OUT	= sfi_param_spec_string ("action", "Action", NULL,
				 NULL, SFI_PARAM_DEFAULT);
}
BODY (BseProcedureClass *proc,
      const GValue      *in_values,
      GValue            *out_values)
{
  /* extract parameter values */
  BseScriptControl *self = bse_value_get_object (in_values++);
  guint             nth  = sfi_value_get_int (in_values++);
  BseScriptControlAction *a;
  
  /* check parameters */
  if (!BSE_IS_SCRIPT_CONTROL (self))
    return BSE_ERROR_PROC_PARAM_INVAL;
  
  a = g_slist_nth_data (self->actions, nth);
  
  /* set output parameters */
  sfi_value_set_string (out_values++, a ? g_quark_to_string (a->action) : NULL);
  
  return BSE_ERROR_NONE;
}

